  basicstyle=\ttfamily,
  backgroundcolor=\color{gray!2},
  basewidth={0.5em,0.45em},
  frame=single,
  framerule=0pt,
  emph={},
  emphstyle=\bfseries
}

% rename environments
\let\codeblock\lstlisting
\let\code\lstinline


